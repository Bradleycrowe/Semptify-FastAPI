# Semptify FastAPI Configuration
# Copy this file to .env and fill in your values

# =============================================================================
# Application
# =============================================================================
APP_NAME=Semptify
APP_VERSION=5.0.0
DEBUG=true

# =============================================================================
# Server
# =============================================================================
HOST=0.0.0.0
PORT=8000

# =============================================================================
# Security
# =============================================================================
# Mode: "open" for development (no auth required), "enforced" for production
SECURITY_MODE=open

# Secret key for sessions/tokens - CHANGE THIS IN PRODUCTION
SECRET_KEY=change-me-to-a-random-string-in-production

# Rate limiting
RATE_LIMIT_WINDOW=60
RATE_LIMIT_MAX_REQUESTS=100

# =============================================================================
# Database
# =============================================================================
# SQLite (development)
DATABASE_URL=sqlite+aiosqlite:///./semptify.db

# PostgreSQL (production) - uncomment and configure
# DATABASE_URL=postgresql+asyncpg://user:password@localhost:5432/semptify

# =============================================================================
# File Storage
# =============================================================================
UPLOAD_DIR=uploads
VAULT_DIR=uploads/vault
MAX_UPLOAD_SIZE_MB=50
ALLOWED_EXTENSIONS=pdf,png,jpg,jpeg,gif,doc,docx,txt,mp3,mp4,wav

# =============================================================================
# AI Provider
# =============================================================================
# Options: openai, azure, ollama, none
AI_PROVIDER=none

# OpenAI
OPENAI_API_KEY=
OPENAI_MODEL=gpt-4o-mini

# Azure OpenAI
AZURE_OPENAI_API_KEY=
AZURE_OPENAI_ENDPOINT=
AZURE_OPENAI_DEPLOYMENT=
AZURE_OPENAI_API_VERSION=2024-02-15-preview

# Ollama (local)
OLLAMA_BASE_URL=http://localhost:11434
OLLAMA_MODEL=llama3.2

# =============================================================================
# External Services
# =============================================================================
GITHUB_TOKEN=

# =============================================================================
# Cloud Storage Providers (OAuth2)
# User authentication is based on cloud storage access
# =============================================================================

# Google Drive
# Create at: https://console.cloud.google.com/apis/credentials
GOOGLE_DRIVE_CLIENT_ID=
GOOGLE_DRIVE_CLIENT_SECRET=

# Dropbox
# Create at: https://www.dropbox.com/developers/apps
DROPBOX_APP_KEY=
DROPBOX_APP_SECRET=

# OneDrive (Microsoft)
# Create at: https://portal.azure.com/#view/Microsoft_AAD_RegisteredApps
ONEDRIVE_CLIENT_ID=
ONEDRIVE_CLIENT_SECRET=

# Cloudflare R2 (System storage only - for admin/internal use)
R2_ACCOUNT_ID=
R2_ACCESS_KEY_ID=
R2_SECRET_ACCESS_KEY=
R2_BUCKET_NAME=semptify-system

# =============================================================================
# CORS (comma-separated origins, or * for all)
# =============================================================================
CORS_ORIGINS=*

# =============================================================================
# Logging
# =============================================================================
LOG_LEVEL=INFO
LOG_JSON_FORMAT=false
ENABLE_METRICS=true
