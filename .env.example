# =============================================================================
# Semptify Research Module - Environment Configuration
# =============================================================================
# Copy this file to .env and configure your local endpoints/API keys.
# Collaborators can drop in their own endpoints without code changes.
# =============================================================================

# -----------------------------------------------------------------------------
# FEATURE FLAGS
# -----------------------------------------------------------------------------
# Set to "false" to disable mock data and use real APIs only
USE_MOCK_DATA=true

# Set to "true" to enable real API calls (requires API keys below)
ENABLE_REAL_APIS=false

# -----------------------------------------------------------------------------
# COUNTY ASSESSOR / PROPERTY TAX
# -----------------------------------------------------------------------------
# Minnesota counties with public APIs:
#   Hennepin: https://gis.hennepin.us/property/api/v1
#   Ramsey: https://beacon.schneidercorp.com/api/ramsey
#   Dakota: https://gis.co.dakota.mn.us/api/property
ASSESSOR_BASE=https://gis.hennepin.us/property/api/v1
ASSESSOR_API_KEY=

# -----------------------------------------------------------------------------
# COUNTY RECORDER (Deeds, Liens, Mortgages)
# -----------------------------------------------------------------------------
# Hennepin: https://www.hennepin.us/recorder/api
# Ramsey: https://www.ramseycounty.us/recorder/api
# Dakota: https://www.co.dakota.mn.us/recorder/api
RECORDER_BASE=https://www.hennepin.us/recorder/api/v2
RECORDER_API_KEY=

# -----------------------------------------------------------------------------
# UCC FILINGS (Secretary of State - Business Services)
# -----------------------------------------------------------------------------
# Minnesota SOS: https://mblsportal.sos.state.mn.us/api/ucc
# Direct Connect: https://sos.state.mn.us/direct-connect/ucc
UCC_BASE=https://mblsportal.sos.state.mn.us/api/ucc
UCC_API_KEY=

# -----------------------------------------------------------------------------
# PUBLIC SAFETY / 911 DISPATCH
# -----------------------------------------------------------------------------
# Minneapolis Open Data: https://opendata.minneapolismn.gov/api/911
# St. Paul: https://information.stpaul.gov/api/public-safety
# Hennepin County Sheriff: https://hennepin.us/sheriff/api/cad
DISPATCH_BASE=https://opendata.minneapolismn.gov/api/v2/public_safety
DISPATCH_API_KEY=

# -----------------------------------------------------------------------------
# NEWS AGGREGATION
# -----------------------------------------------------------------------------
# NewsAPI.org: https://newsapi.org/v2 (requires API key - free tier available)
# Google News RSS: https://news.google.com/rss/search
# Get your free API key at: https://newsapi.org/register
NEWS_BASE=https://newsapi.org/v2
NEWS_API_KEY=

# -----------------------------------------------------------------------------
# SECRETARY OF STATE (Business Registry)
# -----------------------------------------------------------------------------
# Minnesota SOS Portal: https://mblsportal.sos.state.mn.us/api/business
# Direct search: https://sos.state.mn.us/business-services
SOS_BASE=https://mblsportal.sos.state.mn.us/api/business
SOS_API_KEY=

# -----------------------------------------------------------------------------
# BANKRUPTCY / FEDERAL COURTS
# -----------------------------------------------------------------------------
# PACER: https://pacer.uscourts.gov/api (requires PACER account - $0.10/page)
# MN Bankruptcy Court: https://www.mnb.uscourts.gov/api
# CourtListener: https://www.courtlistener.com/api/rest/v3 (free, token required)
BANKRUPTCY_BASE=https://www.courtlistener.com/api/rest/v3
BANKRUPTCY_API_KEY=

# -----------------------------------------------------------------------------
# INSURANCE (MN Dept of Commerce)
# -----------------------------------------------------------------------------
# License lookup: https://mn.gov/commerce/insurance/api
# NAIC database: https://content.naic.org/api
INSURANCE_BASE=https://mn.gov/commerce/insurance/api
INSURANCE_API_KEY=

# -----------------------------------------------------------------------------
# HTTP CLIENT SETTINGS
# -----------------------------------------------------------------------------
HTTP_TIMEOUT=15.0
HTTP_RETRIES=3

# -----------------------------------------------------------------------------
# STORAGE / OBJECT STORE (for production ZIP storage)
# -----------------------------------------------------------------------------
# Options: "memory" (default, for dev) or "cloud" (for production)
STORAGE_MODE=memory

# S3-compatible storage settings (only used when STORAGE_MODE=cloud)
STORAGE_BUCKET=semptify-research-exports
STORAGE_ENDPOINT=
STORAGE_ACCESS_KEY=
STORAGE_SECRET_KEY=
STORAGE_REGION=us-east-1

# Signed URL expiry in seconds (default: 1 hour)
SIGNED_URL_EXPIRY=3600

# =============================================================================
# CORE APPLICATION SETTINGS
# =============================================================================

# -----------------------------------------------------------------------------
# SECURITY (REQUIRED - Generate strong values for production!)
# -----------------------------------------------------------------------------
# Generate with: python -c "import secrets; print(secrets.token_urlsafe(64))"
SECRET_KEY=CHANGE-ME-generate-a-secure-random-key

# Security mode: "open" (no auth) or "enforced" (require auth)
SECURITY_MODE=enforced

# Admin PIN for elevated access (CHANGE THIS!)
ADMIN_PIN=CHANGE-ME

# Invite codes for advocate/legal roles (comma-separated)
INVITE_CODES=CHANGE-CODE-1,CHANGE-CODE-2

# -----------------------------------------------------------------------------
# DATABASE
# -----------------------------------------------------------------------------
# PostgreSQL (recommended for production):
# DATABASE_URL=postgresql+asyncpg://user:password@host:5432/dbname

# SQLite (development only):
DATABASE_URL=sqlite+aiosqlite:///./semptify.db

# -----------------------------------------------------------------------------
# AI PROVIDERS (add your API keys)
# -----------------------------------------------------------------------------
ANTHROPIC_API_KEY=
OPENAI_API_KEY=
GROQ_API_KEY=
AZURE_OPENAI_API_KEY=
AZURE_OPENAI_ENDPOINT=

# -----------------------------------------------------------------------------
# CLOUD INTEGRATIONS (OAuth - get from provider dashboards)
# -----------------------------------------------------------------------------
GOOGLE_DRIVE_CLIENT_ID=
GOOGLE_DRIVE_CLIENT_SECRET=
DROPBOX_APP_KEY=
DROPBOX_APP_SECRET=
ONEDRIVE_CLIENT_ID=
ONEDRIVE_CLIENT_SECRET=

# Cloudflare R2
R2_ACCOUNT_ID=
R2_ACCESS_KEY_ID=
R2_SECRET_ACCESS_KEY=
R2_BUCKET_NAME=
R2_ENDPOINT=
R2_API_TOKEN=

# Azure AI
AZURE_AI_ENDPOINT=
AZURE_AI_KEY1=
AZURE_AI_KEY2=
